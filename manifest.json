{
    "name": "Work Buddy",
    "description": "Go to the Extensions tab in the top left and set your keyboard short cut to whatever key you like! (we recommend command + x ;) )",
    "version": "1.0",
    "permissions": [
        "tabs"
    ],
    "manifest_version": 2,
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        
        "default_icon": "workbuddyicon128.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens workbuddy.html"
        }
    }
}